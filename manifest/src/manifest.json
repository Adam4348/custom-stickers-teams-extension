{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.5/MicrosoftTeams.schema.json",
  "manifestVersion": "1.5",
  "id": "{{TEAMS_APP_ID}}",
  "version": "{{npm_package_version}}",
  "packageName": "stickers",
  "developer": {
    "name": "New Future",
    "websiteUrl": "https://{{WEB_HOST}}",
    "privacyUrl": "https://{{WEB_HOST}}/privacy.html",
    "termsOfUseUrl": "https://{{WEB_HOST}}/terms.html"
  },
  "name": {
    "short": "Custom Stickers",
    "full": "Custom Stickers"
  },
  "description": {
    "short": "Add Custom Stickers in Teams ❤",
    "full": "Add custom stickers to Microsoft Teams. You can upload your stickers from PC or phone, collect stickers form others' message and send your own stickers in chat."
  },
  "icons": {
    "outline": "icon-outline.png",
    "color": "icon-color.png"
  },
  "accentColor": "#FFFFFF",
  "configurableTabs": [],
  "bots": [],
  "composeExtensions": [
    {
      "botId": "{{MICROSOFT_APP_ID}}",
      "canUpdateConfiguration": true,
      "commands": [
        {
          "id": "mycollection",
          "title": "My Collections",
          "description": "All stickes I saved",
          "initialRun": true,
          "parameters": [
            {
              "name": "query",
              "description": "search my stickers by name",
              "title": "search"
            }
          ],
          "type": "query",
          "context": [
            "compose"
          ]
        },
        {
          "id": "collect",
          "description": "collect the sticke images from messages",
          "title": "Save Stickers",
          "type": "action",
          "fetchTask": true,
          "context": [
            "message"
          ],
          "taskInfo": {
            "title": "正在保存图片",
            "height": "small",
            "width": "small",
            "url": "https://{{HOSTNAME}}/collect"
          }
        }
      ]
    }
  ],
  "permissions": [],
  "validDomains": [
    "{{WEB_HOST}}",
    "{{HOSTNAME}}",
    "{{AZURE_STORAGE_CDN}}"
  ],
  "localizationInfo": {
    "defaultLanguageTag": "en-us",
    "additionalLanguages": [
      {
        "languageTag": "zh-cn",
        "file": "zh-cn.json"
      },
      {
        "languageTag": "zh",
        "file": "zh-cn.json"
      }
    ]
  }
}